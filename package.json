{
  "name": "itforedrag",
  "version": "1.0.0",
  "description": "itforedrag.dk",
  "main": "server.js",
  "private": true,
  "engines": {
    "node": "^12.16.1",
    "npm": "^6.14.4"
  },
  "scripts": {
    "test": "mocha",
    "build": "rm -rf _site && eleventy",
    "start": "rm -rf _site && eleventy --serve",
    "eslint:fix": "eslint --fix . || echo Unfixable errors were ignored and should be caught by the tests",
    "prettier:write": "prettier --loglevel warn --write \"**/*.@(js|jsx|ts|mjs|json|css|scss|less|html|htm|md|yml|yaml)\"",
    "format": "npm run eslint:fix && npm run prettier:write",
    "download": "curl -sS -o _includes/bootstrap.css https://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css && curl -sS -o _includes/jquery.min.js https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(js|jsx|ts|mjs)": [
      "eslint --fix"
    ],
    "*.@(js|jsx|ts|mjs|json|css|scss|less|html|htm|md|yml|yaml)": [
      "prettier --loglevel warn --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ebdrup/foredrag"
  },
  "license": "None",
  "bugs": {
    "url": "https://github.com/ebdrup/foredrag/issues"
  },
  "homepage": "http://itforedrag.dk",
  "dependencies": {
    "@11ty/eleventy": "0.10.0",
    "eleventy-plugin-lazyimages": "1.1.1",
    "html-minifier": "4.0.0",
    "nunjucks": "3.2.1",
    "purify-css": "1.2.5",
    "terser": "4.6.11"
  },
  "devDependencies": {
    "@practio/eslint-config-practio": "7.1.0",
    "@practio/prettier-config": "4.0.0",
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "execa": "4.0.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "melody-idom": "1.7.1",
    "melody-runtime": "1.7.1",
    "mocha": "7.1.1",
    "mocha-eslint": "6.0.0",
    "prettier": "2.0.4",
    "prettier-plugin-twig-melody": "0.4.2"
  },
  "mocha": {
    "require": [
      "./test/common.js"
    ],
    "recursive": true,
    "timeout": 200000,
    "exit": true
  }
}
